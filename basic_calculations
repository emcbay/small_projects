addition = "+"
subtraktion = "-"
multiplikation = "x"
division = "/"

first_number = int(input("Please put in a number"))
second_number = int(input("Please put in a number"))
grundrechenart = input("Please type addition, subtraktion, multiplikation or division ")
if "addition" in grundrechenart:
    print(first_number + second_number)
elif "subtraktion" in grundrechenart:
    print(first_number - second_number)
elif "multiplikation" in grundrechenart:
    print(first_number * second_number)
elif "division" in grundrechenart:
    print(first_number / second_number)